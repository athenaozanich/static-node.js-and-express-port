extends layout.pug

block content

  article.grid-container.portfolio-intro
    div
      h1 My Projects
      p.lead.text-light
        | A collection of all of my projects, from Front End Dev to Ui/Ux all the way to FullStack Dev

  article.grid-container.portfolio-index

    h3 Front End Web Development
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in fewdProjects
        .cell
          a(href=`/project/${project.devType}/${project.id}`)
            img.thumbnail(src=`/imgs/fewdProjects/${project.devType}${project.id}/${project.img[0]}`)
            h5= project.name

    if fsjsProjects
      h3 Fullstack Javascript Web Development
      .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
        each project in fsjsProjects
          .cell
            a(href=`/project/${project.devType}/${project.id}`)
              img.thumbnail(src=`/imgs/fsjsProjects/${project.devType}${project.id}/${project.img[0]}`)
              h5= project.name