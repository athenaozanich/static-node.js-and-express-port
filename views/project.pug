extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        script
          |console.log(`#{project.name}`)
        h1= project.name

        p.lead.text-light
          |#{project.desc}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each skill in project.skills
            li= skill
          
        a.button.expanded(href=`${project.url}`) Live Demo
        a.button.expanded(href=`${project.repo}`) GitHub Repo
    
    each img in project.img
      img.image(src=`/imgs/${project.devType}Projects/${project.devType}${project.id}/${img}`)
    